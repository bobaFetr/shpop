@model IEnumerable<shpop.Models.Order>

@{
    ViewBag.Title = "Моите поръчки";
}

<h2>История на поръчките</h2>

@if (!Model.Any())
{
    <p>Нямаш направени поръчки.</p>
}
else
{
    <table class="table">
        <tr>
            <th>Дата</th>
            <th>Брой артикули</th>
            <th></th>
        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.OrderItems.Count</td>
                <td>
                    <a href="@Url.Action("Details", "Orders", new { id = order.Id })">Детайли</a>
                </td>
            </tr>
        }
    </table>
}
