@model shpop.Models.Product

@{
    ViewBag.Title = "Детайли";
}

<h2>@Model.Name</h2>

<img src="@Model.ImageUrl" alt="@Model.Name" style="max-height: 300px;" />
<p>@Model.Description</p>
<p><strong>Цена:</strong> @Model.Price лв.</p>
<p><strong>Категория:</strong> @Model.Category?.Name</p>

<form method="post" action="@Url.Action("AddToCart", "Cart", new { id = Model.Id })">
    <button type="submit" class="btn btn-success">Добави в количката</button>
</form>

<a href="@Url.Action("Index", "Products")">⬅ Обратно към продуктите</a>
